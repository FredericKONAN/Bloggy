{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    {% for post in posts %}
        <article>
            <a href="{{ path('app_post_show', {slug: post.slug}) }}"><h1> {{ post.titre }}</h1></a>
            <h5 class="text-muted">
                Publi√© le <time datetime="{{ post.publishedAt|date('Y-m-d H:i') }} ">
                  {{ post.publishedAt|date }}
                </time>
                par  {{ post.author }}
            </h5>
           <p> {{ post.contenu|u.truncate(50, '...', false) }}</p>
        </article>
    {% endfor %}

{% endblock %}
