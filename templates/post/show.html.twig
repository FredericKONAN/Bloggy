{% extends 'base.html.twig' %}

{% block title 'Blog'  %}

{% block body %}
        {% if post is defined and post is not null %}
                <h1>{{ post.titre }}</h1>
                <h5 class="text-muted">
                        Publi√© le <time datetime="{{ post.publishedAt|date('Y-m-d H:i') }} ">
                                {{ post.publishedAt|date }}
                        </time>
                        par  {{ post.author }}
                </h5>
                <p>{{ post.contenu|nl2br }}</p>
        {% endif %}

        <a href="{{ path('app_post_share', post.getPathParams) }}">Partage ce article</a>
{% endblock %}